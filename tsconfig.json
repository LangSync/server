{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2021", // add this line to use ES2021
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "noUnusedLocals": false,
    "rootDir": "src",
    "outDir": "dist"
  },
  "lib": ["es2015"],
  "exclude": ["node_modules"]
}
